<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/RelLay"
            android:layout_height="match_parent">
        
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/bag"
                android:id="@+id/imageView3"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="531dp" android:layout_marginTop="0dp"
                android:layout_below="@+id/imageView3" android:gravity="right">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="20"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20pt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="Post"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="8pt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="30"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20pt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="Followers"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="8pt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="10"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20pt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="Following"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="8pt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="101dp"
                android:layout_height="86dp" android:id="@+id/imageView5" android:layout_weight="1"
                android:layout_alignParentEnd="true" android:layout_marginEnd="294dp" android:layout_marginTop="158dp"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>
</LinearLayout>